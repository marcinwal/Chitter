<!DOCTYPE html>
<html>
  <header>
    <div><a id="logo" href="/">Chitter</a></div>
      <a href="/peep/new" class="button highlighted">Peep</a>
    <div id="user-peeps">
      <% if current_user %>
        <span id="welcome-message">
          Welcome, <%= current_user.username %>
        </span>

        <form id="sign-out" method="post" action="/sessions">
          <input type="hidden" name="_method" value="delete">
          <input type="submit" value="Sign out">
        </form>
      <% else %>
        Hello Chitter!
        <a href='/newuser' id='sign-up' class='button'>Sign up</a>
        <a href='/sessions/new' id='sign-in' class='button'>Sign in</a> 
      <% end %>
    </div>  
  </header>
</html> 
